unit sterowanie;

interface
function steruj_paletka() : Interger;
var zmiana : Integer;
implementation

uses wincrt;

function steruj_paletka() : Interger;
  var
    klawisz : Char;
  begin
    klawisz:=ReadKey;
    if klawisz = #75 then zmiana := -1
    else if klawisz = #77 then zmiana := 1;
  end;
begin
end.

